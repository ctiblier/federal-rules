<style>
  .ruleset-card:hover {
    border-color: rgba(28,28,30,0.3);
    box-shadow: 0 2px 8px rgba(0,0,0,0.06);
  }
  .rs-pill {
    font-family: system-ui, sans-serif;
    font-size: 0.75rem;
    font-weight: 600;
    padding: 0.25rem 0.75rem;
    border-radius: 999px;
    border: 1px solid rgba(28,28,30,0.2);
    background: white;
    color: #6b7280;
    cursor: pointer;
    transition: background-color 0.12s, color 0.12s, border-color 0.12s;
    line-height: 1.6;
  }
  .rs-pill:hover {
    border-color: #1a2744;
    color: #1a2744;
  }
  .rs-pill--active {
    background-color: #1a2744;
    color: white;
    border-color: #1a2744;
  }
  .rs-pill--active:hover {
    color: white;
  }
</style>

<script>
  // Multi-select ruleset pills. Empty set = search all rulesets.
  const selectedRulesets = new Set<string>();
  let pagefindLoaded = false;

  function initSearch() {
    const el = document.getElementById('home-search');
    if (!el) return;
    el.innerHTML = '';
    const filters = selectedRulesets.size > 0
      ? { ruleset: [...selectedRulesets] }
      : {};
    new (window as any).PagefindUI({
      element: '#home-search',
      showSubResults: false,
      resetStyles: false,
      filters,
    });
  }

  function syncPills() {
    const anySelected = selectedRulesets.size > 0;
    document.querySelectorAll<HTMLButtonElement>('.rs-pill').forEach((b) => {
      const r = b.dataset.ruleset ?? '';
      const active = r === '' ? !anySelected : selectedRulesets.has(r);
      b.classList.toggle('rs-pill--active', active);
      b.setAttribute('aria-pressed', active ? 'true' : 'false');
    });
  }

  // Lazy-load Pagefind when the search section scrolls into view
  const searchEl = document.getElementById('home-search');
  if (searchEl) {
    const observer = new IntersectionObserver((entries) => {
      if (!entries[0].isIntersecting) return;
      observer.disconnect();
      const script = document.createElement('script');
      script.src = '/pagefind/pagefind-ui.js';
      script.onload = () => { pagefindLoaded = true; initSearch(); };
      script.onerror = () => {
        if (searchEl) searchEl.innerHTML =
          '<p style="color:#6b7280;font-size:0.875rem;font-family:system-ui,sans-serif;">Search available after running <code>npm run build</code>.</p>';
      };
      document.head.appendChild(script);
    });
    observer.observe(searchEl);
  }

  // Pill click: "All" clears selection; individual pills toggle on/off
  document.querySelectorAll<HTMLButtonElement>('.rs-pill').forEach((btn) => {
    btn.addEventListener('click', () => {
      const r = btn.dataset.ruleset ?? '';
      if (r === '') {
        // "All" — clear everything
        selectedRulesets.clear();
      } else {
        if (selectedRulesets.has(r)) {
          selectedRulesets.delete(r);
        } else {
          selectedRulesets.add(r);
        }
      }
      syncPills();
      if (pagefindLoaded) initSearch();
    });
  });
</script>
